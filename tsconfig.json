{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowJs": true,
        "baseUrl": ".",
        "sourceMap": true,
        "typeRoots": ["./types"]
    },
    "exclude": ["node_modules", "dist", "spec"],
    "include": ["./*.ts", "./**/*.ts", "types/**/*.d.ts"]
}