{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "./dist/esm",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "allowJs": true,
        "baseUrl": ".",
        "sourceMap": true
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
}